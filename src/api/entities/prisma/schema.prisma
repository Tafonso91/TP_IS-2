generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Club {
  id         String    @id @default(uuid()) @map("id")
  club_name  String
  createdOn  DateTime  @default(now()) @map("created_on")
  updatedOn  DateTime  @updatedAt @map("updated_on")

  @@map("club") 
}

model Country {
  id          String    @id @default(uuid()) @map("id")
  country_name String
  geom         Json?
  createdOn   DateTime  @default(now()) @map("created_on")
  updatedOn   DateTime  @updatedAt @map("updated_on")

 players Player[]
  @@map("country") 
}

model StrongFoot {
  id         String    @id @default(uuid()) @map("id")
  foot_name  String
  createdOn  DateTime  @default(now()) @map("created_on")
  updatedOn  DateTime  @updatedAt @map("updated_on")

  @@map("strong_foot") 
}


model Player {
  id          String    @id @default(uuid()) @map("id")
  name        String
  salary      String
  overall     String
  country_id  String
  country     Country @relation(fields: [country_id], references: [id])
  createdOn   DateTime  @default(now()) @map("created_on")
  updatedOn   DateTime  @updatedAt @map("updated_on")

  @@map("player") 
}





